# 四則演算
a = 2.0 + 3.0 * 3.0 / 2.0 - 3.0;
Print(a);
# => 3.5

# 条件分岐
if( a > 0 )
    Print('a: ', a);
    # => a: 3.5
endif

# 繰り返し
count = 0;
while ( count < 3 )
    count = count + 1;
    Print('count: ', count);
    # =>
    # count: 1
    # count: 2
    # count: 3
endloop
